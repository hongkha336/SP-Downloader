    <div id="block-hgs-content" class="block block-system block-system-main-block">
  
    
      <div class="views-element-container"><div class="view view-news view-id-news view-display-id-page_1 js-view-dom-id-c0deb0fdc18146968ff807d26b80b6a0ae213481561041cad743650a067a5693">
  
    
      <div class="view-header">
      <div class="view view-news view-id-news view-display-id-block_1 js-view-dom-id-8f6e9158971483dc2f402b1aedb9731069a76db3108b4450ea33b330be299eb5">
  
    
      
